{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "removeComments": true,
    "strict": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "~TYPES": ["src/entities/types.ts"],
      "~UTILS": ["src/utils/index.ts"],
      "~SERVICES/*": ["src/services/*"]
    },
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "types": [
      "node",
      "jest"
    ],
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
